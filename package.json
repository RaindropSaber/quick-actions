{
  "name": "smart-actions",
  "displayName": "Smart Actions",
  "description": "快速执行自定义脚本的VSCode插件",
  "version": "0.1.1",
  "publisher": "RaindropSaber",
  "author": {
    "name": "Smart Actions Team"
  },
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/RaindropSaber/smart-actions.git"
  },
  "bugs": {
    "url": "https://github.com/RaindropSaber/smart-actions/issues"
  },
  "homepage": "https://github.com/RaindropSaber/smart-actions#readme",
  "keywords": [
    "vscode",
    "extension",
    "smart-actions",
    "ai",
    "text-processing",
    "automation",
    "productivity",
    "tools"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Formatters",
    "Machine Learning"
  ],
  "activationEvents": [
    "*:smartActions.run"
  ],
  "main": "./out/index.js",
  "icon": "./public/icon.png",
  "contributes": {
    "commands": [
      {
        "command": "smartActions.run",
        "title": "执行快速动作",
        "category": "Smart Actions"
      },
      {
        "command": "smartActions.configure",
        "title": "配置动作",
        "category": "Smart Actions"
      }
    ],
    "keybindings": [
      {
        "command": "smartActions.run",
        "key": "alt+q",
        "mac": "alt+q",
        "when": "editorTextFocus"
      },
      {
        "command": "smartActions.configure",
        "key": "alt+w",
        "mac": "alt+w",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Smart Actions",
      "properties": {
        "smartActions.actions": {
          "type": "array",
          "default": [
            {
              "name": "转换为驼峰命名",
              "description": "将选中的文本转换为驼峰命名格式",
              "type": "builtin",
              "builtinType": "camelCase"
            }
          ],
          "description": "自定义action配置列表"
        },
        "smartActions.ai": {
          "type": "object",
          "default": {
            "apiKey": "",
            "baseURL": "https://api.openai.com/v1",
            "model": "gpt-3.5-turbo",
            "temperature": 0.7
          },
          "description": "AI API配置"
        }
      }
    }
  },
  "scripts": {
    "package": "vsce package",
    "vscode:prepublish": "npm run build",
    "build": "vite build",
    "watch": "vite build --watch",
    "dev": "npm run watch"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.74.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vscode/vsce": "^3.6.0",
    "concurrently": "^9.2.1",
    "glob": "^11.0.3",
    "typescript": "^4.9.4",
    "vite": "^7.1.6"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "openai": "^5.21.0",
    "vue": "^3.5.21"
  }
}
